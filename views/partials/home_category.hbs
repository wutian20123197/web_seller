{{#each categoryList}}
    <div class="sl-floor-category clear">
        <div class="left">
            <div class="ch-layout-floor-normal-left-style1">
                <div class="ch-layout-floor-normal-left-style1-head">
                    <h2> {{index}}F {{categoryName}}</h2>

                    <!--类目底部列表-->
                    <ul class="ch-layout-floor-normal-left-style1-list-bottom clear">
                        {{#each itemList}}
                            <li class="list-item">
                                <a href="{{link}}" target="_blank">{{name}}</a>
                            </li>
                        {{/each}}
                    </ul>
                </div>

                <div class="ch-layout-floor-normal-left-style1-body">
                    <img src="{{category_img}}" alt=""/>
                </div>

                <div class="ch-layout-floor-normal-left-style1-footer">
                    <div class="txt">
                    </div>
                </div>

            </div>
        </div>
        <div class="right">
            <ul class="clear">
                {{#each offerList}}
                    <li class="sl-offer-list">
                        <a href="/detail/{{_id}}">
                        <div class="sl-offer-list-imgbox">
                            <img src="{{main_img}}" alt=""/>
                        </div>
                        <div class="sl-offer-text">
                            <p>{{offer_title}}</p>

                            <div class="mt10 clear">
                                <div class="sl-offer-text-price">
                                    <span class="f14 orange">￥{{offer_price}}</span>
                                </div>
                                <div class="sl-offer-text-area">
                                    <span><i class="iconfont">&#xe60c;</i>{{offer_area}}</span>
                                </div>
                            </div>
                        </div>
                        </a>
                    </li>
                {{/each}}
            </ul>

        </div>
    </div>
{{/each}}
